<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather Info"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_ambient_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambient Light Info"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Info"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Behavior Info"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>