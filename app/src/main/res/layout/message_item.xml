<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="MessageBinding">
        <variable
            name="item"
            type="com.huawei.panoramawarenessnearby.nearbyservice.nearby.MessageBean" />
    </data>
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="start"
            android:background="@drawable/round_rectangle"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="@dimen/messageElevation"
            >

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.msg}"
                android:textSize="@dimen/messageSize"
                android:layout_marginEnd="10dp"
                android:singleLine="false"
                android:maxEms="21"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.time}"
                android:textSize="@dimen/timeSize"
                app:layout_constraintTop_toBottomOf="@id/message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" /-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>